---
/** Propiedades para el componente Cover */
interface Props {
  /** Ruta en URL de la imagen */
  image: string
  /** TÃ­tulo para la cubierta */
  title: string
}

const { image, title } = Astro.props
---

<div class='relative w-full h-55 grid place-items-center overflow-hidden mb-8 md:h-70 lg:h-100'>
  <img
    class='absolute -z-10 w-full brightness-60 object-cover transition-all duration-150 mask'
    src={image}
    alt={`Imagen de ${title}`}
    fetchpriority='high'
  />
  <h1 class='text-4xl font-bold text-white text-center md:text-5xl lg:text-7xl'>{title}</h1>
</div>

<style>
  img {
    /* mask-image: linear-gradient(black 45%, transparent 67%); */
    mask-size: contain;
  }
  div:hover > img {
    @apply scale-110 brightness-75;
  }
</style>
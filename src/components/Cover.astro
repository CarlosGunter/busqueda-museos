---
/** Propiedades para el componente Cover */
interface CoverProps {
  /** Ruta en URL de la imagen */
  image: string
  /** TÃ­tulo para la cubierta */
  title: string  
}

const { image, title } = Astro.props as CoverProps
---

<div class="relative w-full h-55 grid place-items-center overflow-hidden mb-8">
  <img
    class="
      absolute -z-10 h-90
      brightness-60 object-cover
      transition-all duration-150
      "
    src={image}
    alt={`Imagen de ${title}`}
    fetchpriority="high"
  />
  <h1 class="text-4xl font-bold text-white text-center">{title}</h1>
</div>

<style>
  div:hover > img {
    @apply scale-120 brightness-75;
  }
</style>